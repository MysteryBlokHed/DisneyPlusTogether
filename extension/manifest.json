{
    "manifest_version": 2,
    "name": "Disney Plus Together",
    "description": "An extension to sync movies and TV shows on Disney Plus.",
    "version": "1.0.0",
    "icons": {
        "128": "icon_128.png"
    },

    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "Disney Plus Together",
        "default_popup": "popup.html"
    },
    
    "content_scripts": [{
            "matches": ["https://*.disneyplus.com/video/*"],
            "js": ["content.js"]
    }]
}
